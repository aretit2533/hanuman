.SH EXAMPLE
A minimal Equinox HTTP server application:
.PP
.nf
#include <framework.h>
#include <http_server.h>

void hello_handler(HTTP_REQUEST *req, HTTP_RESPONSE *res, 
                  void *data) {
    const char *name = http_request_get_query_param(req, "name");
    char body[256];
    snprintf(body, sizeof(body), "Hello, %s!", 
             name ? name : "World");
    http_response_set_text(res, body);
}

int main(void) {
    framework_init();
    
    HTTP_SERVER *server = http_server_create("0.0.0.0", 8080);
    http_server_add_route(server, HTTP_METHOD_GET,
                         "/hello", hello_handler, NULL);
    
    http_server_start(server);
    http_server_run(server);
    
    http_server_destroy(server);
    framework_shutdown();
    return 0;
}
.fi
